{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Start all",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "osx": {
                "command": "docker-compose -f docker-compose.local.yml up"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "dedicated"
            },
            "problemMatcher": [],
            "windows": {
                "command": "docker-compose -f docker-compose.local.yml up"
            }
        },
        {
            "label": "Lint",
            "type": "shell",
            "osx": {
                "command": "yarn lint:fix"
            },
            "problemMatcher": [
                "$eslint-stylish"
            ],
            "options": {
                "cwd": "${workspaceRoot}",
                "statusbar": "hide"
            },
            "presentation": {
                "panel": "shared"
            },
            "group": "test"
        }
    ]
}